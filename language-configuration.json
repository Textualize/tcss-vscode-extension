{
    "comments": {
      "lineComment": "#",
      "blockComment": ["/*", "*/"]
    },
    "brackets": [
      ["{", "}"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'", "notIn": ["comment"] },
      { "open": "\"", "close": "\"" },
      { "open": "/**", "close": " */" }
    ],
    "autoCloseBefore": ";:.,=})> \n\t",
    "surroundingPairs": [
      ["{", "}"],
      ["(", ")"],
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
    "indentationRules": {
      "increaseIndentPattern": "^((?!\\/\\/).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
      "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
    }
}
